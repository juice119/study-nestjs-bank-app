{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": ".",
  "testRegex": "(/test/.*|(\\.|/)(test|spec))\\.ts?$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": [
    "**/*.(t|j)s"
  ],
  "allowJs": false,
  "coverageDirectory": "../coverage",
  "testEnvironment": "node"
}
